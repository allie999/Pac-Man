<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1655FD" />
            <gradient android:angle="-90" android:startColor="#1655FD" android:endColor="#003399"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1655FD" />
            <solid android:color="#59CAFF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1655FD" />
            <gradient android:angle="-90" android:startColor="#1655FD" android:endColor="#59CAFF" />
        </shape>
    </item>
</selector>